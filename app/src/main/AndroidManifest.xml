<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prueba.eleinco.pruebaandroid_gabrielceronviveros">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.prueba.eleinco.pruebaandroid_gabrielceronviveros.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="Cinemas"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Splash"
            android:label="Cinemas"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.prueba.eleinco.pruebaandroid_gabrielceronviveros.Cinema"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.prueba.eleinco.pruebaandroid_gabrielceronviveros.AlreadySeen"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>